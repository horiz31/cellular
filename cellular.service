[Unit]
Description=Cellular Service
After=network.target
RequiresMountsFor=/etc /usr

[Service]
Type=simple
RemainAfterExit=true
EnvironmentFile=/etc/systemd/cellular.conf
RuntimeDirectory=cellular
RuntimeDirectoryMode=0755
ExecStartPre=/bin/sleep 5
ExecStart=/usr/local/bin/cellular-start.sh
ExecStop=/usr/local/bin/cellular-stop.sh
StandardOutput=journal
StandardError=journal
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
